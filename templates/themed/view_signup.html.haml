%h1
  <%= options[:app_name] %>
.block#block-signup
  %h2
    Sign up
  .content
    .flash
      - flash.each do |type, message|
        .message{ :class => type.to_s }
          %p
            = message
    - form_for :<%= resource_name %>, :url => <%= controller_routing_path %>_path, :html => { :class => 'form' } do |f|
      .group.wat-cf
        .left
          = f.label :login, 'Login', :class => "label"
        .right
          = f.text_field :login, :class => 'text_field'
      .group.wat-cf
        .left
          = f.label :email, 'Email', :class="label"
        .right
          = f.text_field :email, :class => 'text_field'
      .group.wat-cf
        .left
          = f.label, :password, 'Password', :class="label"
        .right
          = f.password_field :password, :class => 'text_field'
      .group
        .left.wat-cf
          = f.label, :password_confirmation, 'Password', :class="label"
        .right
          = f.password_field :password_confirmation, :class => 'text_field'

      .group.navform
        = f.submit 'Sign up', :class => "button"
